yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa
# default layout (can be bsp, stack or float)
yabai -m config layout bsp

# new window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

# padding set to 12px
yabai -m config top_padding 7
yabai -m config bottom_padding 7
yabai -m config left_padding 7
yabai -m config right_padding 7
yabai -m config window_gap 8
yabai -m config window_animation_duration    0.4        
yabai -m config window_animation_frame_rate  120

# yabai -m config external_bar all:50:50
# yabai -m config window_shadow on
# yabai -m config insert_feedback_color 0xffd75f5f

# yabai -m config window_border on
# yabai -m config window_border_width        2  
# yabai -m config window_border_hidpi        on
# yabai -m config window_border_radius       12
# yabai -m config active_window_border_color 0xffe1e3e4
# yabai -m config normal_window_border_color 0xff2a2f38
# yabai -m window --toggle border 


# on or off (default: off)
yabai -m config auto_balance on


# -- mouse settings --

# center mouse on window with focus
yabai -m config mouse_follows_focus on
yabai -m config split_type auto

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt
# set modifier + left-click drag to move window
yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
yabai -m config mouse_action2 resize

# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap


# disable specific apps
yabai -m rule --add app="^系统设置$" manage=off
yabai -m rule --add app="^计算器$" manage=off
yabai -m rule --add app="^KeyboardHolder$" manage=off
yabai -m rule --add app="^时钟$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^网易云音乐$" manage=off
yabai -m rule --add app="^pot$" manage=off
yabai -m rule --add app="^微信$" manage=off
yabai -m rule --add app="^数码测色计$" manage=off
